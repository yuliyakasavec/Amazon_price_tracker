generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product{
  id                   Int       @id @default(autoincrement())
  userEmail            String
  amazonId             String
  title                String
  img                  String
  price                Int
  reviewsCount         Int
  reviewsAverageRating Int
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model ProductDataHistory{
  id                   Int       @id @default(autoincrement())
  amazonId             String
  title                String
  img                  String
  price                Int
  reviewsCount         Int
  reviewsAverageRating Int
  createdAt            DateTime  @default(now())
}

model Notification{
  id                   Int       @id @default(autoincrement())
  userEmail            String
  amazonId             String
  title                String
  createdAt            DateTime  @default(now())
}